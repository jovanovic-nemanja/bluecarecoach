<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <VideoView
            android:id="@+id/videoview"
            android:layout_height="200dp"
            android:layout_width="match_parent"/>


        <ScrollView
            android:layout_marginTop="40dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        app:tint="@color/sky_blue_clr"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/uploadicon"
                        android:src="@drawable/home_icon"
                        android:layout_height="27dp"
                        android:layout_width="27dp"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/uploadicon"
                        android:layout_toLeftOf="@+id/uploadCredentialsCount"
                        android:layout_marginRight="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="@string/upload_credentials"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:id="@+id/uploadCredentialsCount"
                        android:layout_height="20dp"
                        android:layout_width="20dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/border_grey"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        app:tint="@color/sky_blue_clr"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/expireicon"
                        android:src="@drawable/home_icon"
                        android:layout_height="27dp"
                        android:layout_width="27dp"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/expireicon"
                        android:layout_toLeftOf="@+id/expireCredentialsCount"
                        android:layout_marginRight="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="@string/upload_credentials"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:id="@+id/expireCredentialsCount"
                        android:layout_height="20dp"
                        android:layout_width="20dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/border_grey"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        app:tint="@color/sky_blue_clr"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/extraicon"
                        android:src="@drawable/home_icon"
                        android:layout_height="27dp"
                        android:layout_width="27dp"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/extraicon"
                        android:layout_toLeftOf="@+id/extraCredentialsCount"
                        android:layout_marginRight="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="@string/upload_credentials"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:id="@+id/extraCredentialsCount"
                        android:layout_height="20dp"
                        android:layout_width="20dp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</LinearLayout>
</layout>