<layout >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/sky_blue_clr"
        android:layout_height="60dp"
        android:layout_width="match_parent">


        <Button
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/saveBtn"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/save"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/logoutBtn"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
      android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cornor_layout"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <TextView
            android:layout_marginTop="5dp"
            android:background="@drawable/cornor_textview"
            android:gravity="center"
            android:text="@string/personal"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:id="@+id/personalText"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:layout_toRightOf="@+id/personalText"
            android:text="@string/job_training"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/job_training"
            android:layout_height="40dp"
            android:layout_width="0dp"/>


    </LinearLayout>

